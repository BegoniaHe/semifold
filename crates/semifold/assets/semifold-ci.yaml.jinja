name: Semifold CI
on:
  push:
    branches: [{{ base_branch }}]

env:
  CLICOLOR_FORCE: 1

permissions:
  id-token: write
  contents: write
  pull-requests: write

jobs:
  build:
    name: Version or Publish
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v5
        with:
          fetch-depth: 0
      - name: Setup Semifold
        uses: noctisynth/setup-semifold@main
      - name: Semifold CI
        run: semifold ci
        env:
          GITHUB_TOKEN: {% raw %}${{ secrets.GITHUB_TOKEN }}{% endraw %}{% if 'rust' in resolvers %}
          CARGO_REGISTRY_TOKEN: {% raw %}${{ secrets.CARGO_REGISTRY_TOKEN }}{% endraw %}{% endif %}{% if 'nodejs' in resolvers %}
          NODE_AUTH_TOKEN: {% raw %}${{ secrets.NODE_AUTH_TOKEN }}{% endraw %}{% endif %}
